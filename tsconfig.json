{
    "compilerOptions": {
        "target": "es2020",
        "module": "esnext",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        // Key Fix 1: Tells the compiler to use the new JSX transform
        "jsx": "react-jsx",
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "src/App.test.js",
        "src/index.js",
        "src/reportWebVitals.js",
        "src/setupTests.js"
    ]
}